{
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"allowJs": true,
		"strictNullChecks": true,
		// "emitDeclarationOnly": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"noImplicitAny": false,
		// "typeRoots": ["src/customTypings", "node_modules/@types"],
		"strict": true,
		"types": ["node"],
		"esModuleInterop": true,

		"skipLibCheck": true
	}
}
